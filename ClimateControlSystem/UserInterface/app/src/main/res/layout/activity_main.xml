<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000000"
    tools:context="com.example.amanda.userinterface.MainActivity">

    <Switch
        android:text="HEAT"
        android:textColor="@android:color/holo_red_light"
        android:textSize="35sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/heat_pass"
        android:layout_alignBaseline="@+id/ac"
        android:layout_alignBottom="@+id/ac"
        android:layout_centerHorizontal="true" />

    <Switch
        android:text="Defrost"
        android:textColor="@android:color/white"
        android:textSize="35sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch1"
        android:layout_alignBaseline="@+id/heat_pass"
        android:layout_alignBottom="@+id/heat_pass"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Humidity:"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Exterior Temp:"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exterior_degree"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/heat_pass"
        android:layout_toEndOf="@+id/heat_pass" />

    <Switch
        android:text="A/C"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="35sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ac"
        android:layout_marginTop="94dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="FAN"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fan"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/heat_pass"
        android:layout_toStartOf="@+id/heat_pass" />

    <ToggleButton
        android:text="On"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toggleButton"
        tools:text="On"
        android:layout_alignBaseline="@+id/fan"
        android:layout_alignBottom="@+id/fan"
        android:layout_alignRight="@+id/heat_pass"
        android:layout_alignEnd="@+id/heat_pass" />

    <ImageButton
        app:srcCompat="@drawable/up"
        android:id="@+id/imageButtonInc"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:src="@drawable/up"
        android:scaleType="fitCenter"
        android:layout_marginTop="68dp"
        android:background="#000000"
        android:layout_below="@+id/heat_pass"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="60"
        android:textColor="@android:color/white"
        android:textSize="70sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/temp"
        android:layout_marginTop="118dp"
        android:layout_below="@+id/imageButtonInc"
        android:layout_alignRight="@+id/imageButtonInc"
        android:layout_alignEnd="@+id/imageButtonInc" />

    <ImageButton
        app:srcCompat="@drawable/down"
        android:id="@+id/imageButtonDec"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:src="@drawable/down"
        android:scaleType="fitCenter"
        android:background="#000000"
        android:layout_marginBottom="69dp"
        android:layout_above="@+id/toggleButton"
        android:layout_alignRight="@+id/temp"
        android:layout_alignEnd="@+id/temp" />


</RelativeLayout>
