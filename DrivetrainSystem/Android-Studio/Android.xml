<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.tapanapatel.drivetrainfinal.MainActivity"
    android:background="@drawable/newdashboard">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_main"
        android:visibility="visible" />

    #Park Toggle Button
    <ToggleButton
        android:text="P"
        android:id="@+id/toggleButton1"
        app:layout_anchor="@+id/progressBar2"
        app:layout_anchorGravity="bottom|left"
        android:layout_gravity="center_vertical|right"
        android:layout_width="100dp"
        android:textOff="P"
        android:textOn="PARK"
        android:layout_height="100dp" />
    
     #Reverse ToggleButton
     <ToggleButton
        android:text="R"
        android:id="@+id/toggleButton2"
        android:layout_height="100dp"
        app:layout_anchor="@+id/progressBar2"
        android:layout_width="100dp"
        android:textOff="R"
        android:textOn="REVERSE"
        app:layout_anchorGravity="bottom|center_horizontal"
        android:layout_gravity="top|left" />
    
    
     #Neutral ToggleButton
    <ToggleButton
        android:text="N"
        android:layout_height="100dp"
        android:id="@+id/toggleButton3"
        app:layout_anchor="@+id/progressBar2"
        app:layout_anchorGravity="bottom|center_horizontal"
        android:layout_gravity="top|right"
        android:layout_width="100dp"
        android:textOff="N"
        android:textOn="NEUTRAL" />
    
        #Drive ToggleButton
    <ToggleButton
        android:text="D"
        android:layout_height="100dp"
        android:id="@+id/toggleButton4"
        app:layout_anchor="@+id/progressBar2"
        app:layout_anchorGravity="bottom|right"
        android:layout_gravity="top|left"
        android:layout_width="100dp"
        android:textOff="D"
        android:textOn="DRIVE" />
                  
     #ProgressBar that will surround the Speedometer
     <ProgressBar
        style="?android:attr/progressBarStyleSmall"
        android:id="@+id/progressBar"
        app:layout_anchor="@+id/progressBar2"
        app:layout_anchorGravity="center_vertical|right"
        android:layout_gravity="top|left"
        android:layout_height="350dp"
       android:layout_width="250dp" />


    #ProgressBar that will surround the Speedometer
    <ProgressBar
        style="@android:style/Widget.Material.Light.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/progressBar2" />



    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_gravity="top|right"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@android:drawable/ic_btn_speak_now"
        app:backgroundTint="@android:color/black"
        app:elevation="10dp"
        app:layout_anchor="@+id/progressBar2"
        app:layout_anchorGravity="center_vertical|left"
        android:layout_height="45dp"
        android:layout_width="45dp" />

   


</android.support.design.widget.CoordinatorLayout>
