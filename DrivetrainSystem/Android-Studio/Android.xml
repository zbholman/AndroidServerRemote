<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.tapanapatel.drivetrainfinal.MainActivity"
    android:background="#000000"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:id="@+id/txtCurrentSpeed"
                android:layout_height="match_parent"
                android:text="DASHBOARD"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_weight="10"
                android:textSize="45sp"
                android:textColor="#66FFFF"
                android:gravity="center"
                android:layout_width="match_parent" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_main"
        android:visibility="visible" />


    <ToggleButton
        android:text="P"
        android:id="@+id/toggleButton1"
        app:layout_anchor="@+id/progressBar2"
        app:layout_anchorGravity="bottom|left"
        android:layout_gravity="center_vertical|right"
        android:layout_width="100dp"
        android:textSize="40sp"
        android:textOff="P"
        android:textOn="P"
        android:layout_height="100dp"
        />

    <ToggleButton
        android:text="N"
        android:layout_height="100dp"
        android:id="@+id/toggleButton3"
        app:layout_anchor="@+id/progressBar2"
        app:layout_anchorGravity="bottom|center_horizontal"
        android:layout_gravity="top|right"
        android:layout_width="100dp"
        android:textSize="40sp"
        android:textOff="N"
        android:textOn="N"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"/>

    <ToggleButton
        android:text="D"
        android:layout_height="100dp"
        android:id="@+id/toggleButton4"
        app:layout_anchor="@+id/progressBar2"
        app:layout_anchorGravity="bottom|right"
        android:layout_gravity="top|left"
        android:layout_width="100dp"
        android:textSize="40sp"
        android:textOff="D"
        android:textOn="D"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"/>


    <ProgressBar
        style="@android:style/Widget.Material.Light.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/progressBar2" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_gravity="top|right"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@android:drawable/ic_btn_speak_now"
        app:backgroundTint="@android:color/black"
        app:elevation="10dp"
        app:layout_anchor="@+id/progressBar2"
        app:layout_anchorGravity="center_vertical|left"
        android:layout_height="45dp"
        android:layout_width="45dp" />

    <ToggleButton
        android:text="R"
        android:id="@+id/toggleButton2"
        android:layout_height="100dp"
        app:layout_anchor="@+id/progressBar2"
        android:layout_width="100dp"
        android:textSize="40sp"
        android:textOff="R"
        android:textOn="R"
        app:layout_anchorGravity="bottom|center_horizontal"
        android:layout_gravity="top|left"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"/>

    <ImageButton
        app:srcCompat="@drawable/up"
        android:id="@+id/imageButtonInc"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/up"
        android:scaleType="fitCenter"
        android:layout_marginTop="100dp"
        android:background="#000000"
        android:layout_below="@+id/switch_Auto"
        android:layout_alignLeft="@+id/switch_Auto"
        android:layout_alignStart="@+id/switch_Auto"
        android:layout_marginLeft="250dp"
        android:layout_marginStart="250dp"
        style="@android:style/Widget.Material.ImageButton"
        android:elevation="0dp" />


    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/down"
        android:layout_marginTop="350dp"
        android:id="@+id/imageButtonDec"
        android:scaleType="fitCenter"
        android:layout_below="@+id/txt_Temp"
        android:layout_alignLeft="@+id/imageButtonInc"
        android:layout_alignStart="@+id/imageButtonInc"
        android:background="@android:color/black"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"

        android:layout_gravity="center"
        />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/right"
        android:layout_marginTop="350dp"
        android:id="@+id/imageButtonRig"
        android:scaleType="fitCenter"
        android:layout_below="@+id/txt_Temp"
        android:layout_alignLeft="@+id/imageButtonInc"
        android:layout_alignStart="@+id/imageButtonInc"
        android:background="@android:color/black"
        android:layout_marginLeft="450dp"
        android:layout_marginStart="450dp"

        />


    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/left"
        android:layout_marginTop="350dp"
        android:id="@+id/imageButtonLef"
        android:scaleType="fitCenter"
        android:layout_below="@+id/txt_Temp"
        android:layout_alignLeft="@+id/imageButtonInc"
        android:layout_alignStart="@+id/imageButtonInc"
        android:background="@android:color/black"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
