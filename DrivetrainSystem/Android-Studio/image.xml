<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.tapanapatel.drivetrainfinal.MainActivity"
    android:background="#000000"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <ImageButton
        app:srcCompat="@drawable/up"
        android:id="@+id/imageButtonInc"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/up"
        android:scaleType="fitCenter"
        android:layout_marginTop="100dp"
        android:background="#000000"
        android:layout_below="@+id/switch_Auto"
        android:layout_alignLeft="@+id/switch_Auto"
        android:layout_alignStart="@+id/switch_Auto"
        android:layout_marginLeft="250dp"
        android:layout_marginStart="250dp"
        style="@android:style/Widget.Material.ImageButton"
        android:elevation="0dp" />


    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/down"
        android:layout_marginTop="350dp"
        android:id="@+id/imageButtonDec"
        android:scaleType="fitCenter"
        android:layout_below="@+id/txt_Temp"
        android:layout_alignLeft="@+id/imageButtonInc"
        android:layout_alignStart="@+id/imageButtonInc"
        android:background="@android:color/black"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"

        android:layout_gravity="center"
        />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/right"
        android:layout_marginTop="350dp"
        android:id="@+id/imageButtonRig"
        android:scaleType="fitCenter"
        android:layout_below="@+id/txt_Temp"
        android:layout_alignLeft="@+id/imageButtonInc"
        android:layout_alignStart="@+id/imageButtonInc"
        android:background="@android:color/black"
        android:layout_marginLeft="450dp"
        android:layout_marginStart="450dp"

        />


    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/left"
        android:layout_marginTop="350dp"
        android:id="@+id/imageButtonLef"
        android:scaleType="fitCenter"
        android:layout_below="@+id/txt_Temp"
        android:layout_alignLeft="@+id/imageButtonInc"
        android:layout_alignStart="@+id/imageButtonInc"
        android:background="@android:color/black"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        />
