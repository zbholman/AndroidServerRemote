<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="saac.androidapp.Main"
    android:background="#575757">


    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="1"
        android:id="@+id/button"
        android:textColor="#ffffff"
        android:background="@drawable/selector"
        android:textStyle="bold"
        android:textSize="50dp"
        android:textAlignment="center"
        android:layout_marginTop="224dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/button2"
        android:layout_toStartOf="@+id/button2"
        android:clickable="true"
        android:singleLine="false"
        android:focusable="false"
        android:longClickable="true"
        android:enabled="true"
        android:onClick="setContentView" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="2"
        android:id="@+id/button2"
        android:textColor="#ffffff"
        android:background="@drawable/selector"
        android:textStyle="bold"
        android:textSize="50dp"
        android:textAlignment="center"
        android:layout_gravity="top|center|bottom"
        android:layout_alignTop="@+id/button"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="3"
        android:id="@+id/button3"
        android:textColor="#ffffff"
        android:background="@drawable/selector"
        android:textStyle="bold"
        android:textSize="50dp"
        android:textAlignment="center"
        android:layout_alignTop="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="4"
        android:id="@+id/button4"
        android:textColor="#ffffff"
        android:background="@drawable/selector"
        android:textStyle="bold"
        android:textSize="50dp"
        android:textAlignment="center"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="5"
        android:id="@+id/button5"
        android:textColor="#ffffff"
        android:background="@drawable/selector"
        android:textStyle="bold"
        android:textSize="50dp"
        android:textAlignment="center"
        android:layout_gravity="top|center|bottom"
        android:layout_below="@+id/button2"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="6"
        android:id="@+id/button6"
        android:textColor="#ffffff"
        android:background="@drawable/selector"
        android:textStyle="bold"
        android:textSize="50dp"
        android:textAlignment="center"
        android:layout_below="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="7"
        android:id="@+id/button7"
        android:textColor="#ffffff"
        android:background="@drawable/selector"
        android:textStyle="bold"
        android:textSize="50dp"
        android:textAlignment="center"
        android:layout_below="@+id/button4"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="8"
        android:id="@+id/button8"
        android:textColor="#ffffff"
        android:background="@drawable/selector"
        android:textStyle="bold"
        android:textSize="50dp"
        android:textAlignment="center"
        android:layout_gravity="top|center|bottom"
        android:layout_below="@+id/button5"
        android:layout_toRightOf="@+id/button7"
        android:layout_toEndOf="@+id/button7" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="9"
        android:id="@+id/button9"
        android:textColor="#ffffff"
        android:background="@drawable/selector"
        android:textStyle="bold"
        android:textSize="50dp"
        android:textAlignment="center"
        android:layout_below="@+id/button6"
        android:layout_toRightOf="@+id/button8"
        android:layout_toEndOf="@+id/button8" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="CLEAR"
        android:id="@+id/button10"
        android:textColor="#000000"
        android:background="@drawable/selector"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_below="@+id/button7"
        android:layout_alignLeft="@+id/button7"
        android:layout_alignStart="@+id/button7"
        android:elegantTextHeight="false" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="0"
        android:id="@+id/button11"
        android:textColor="#ffffff"
        android:background="@drawable/selector"
        android:textStyle="bold"
        android:textSize="50dp"
        android:textAlignment="center"
        android:layout_gravity="top|center|bottom"
        android:layout_below="@+id/button8"
        android:layout_toRightOf="@+id/button7"
        android:layout_toEndOf="@+id/button7" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="&lt;-"
        android:id="@+id/button12"
        android:textColor="#000000"
        android:background="@drawable/selector"
        android:textStyle="bold"
        android:textSize="50dp"
        android:textAlignment="center"
        android:layout_below="@+id/button9"
        android:layout_toRightOf="@+id/button11"
        android:layout_toEndOf="@+id/button11" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/button10"
        android:layout_alignStart="@+id/button10"
        android:layout_marginBottom="60dp"
        android:layout_below="@+id/button10"
        android:layout_alignRight="@+id/button12"
        android:layout_alignEnd="@+id/button12"
        android:textSize="35dp"
        android:textColor="#00ff19"
        android:textAlignment="center"
        android:focusable="false"
        android:clickable="false"
        android:editable="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:textSize="40dp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:visibility="invisible" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:textSize="35dp"
        android:textColor="#00ff19"
        android:textAlignment="center"
        android:focusable="false"
        android:clickable="false"
        android:editable="false"
        android:layout_above="@+id/editText2"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:layout_alignTop="@+id/editText" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lockButton"
        android:src="@mipmap/lockityo"
        android:background="@drawable/selector"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/alarmButton"
        android:layout_toLeftOf="@+id/alarmButton"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/unlockButton"
        android:src="@mipmap/unlockityo"
        android:background="@drawable/selector"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/alarmButton"
        android:layout_toRightOf="@+id/alarmButton"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alarmButton"
        android:src="@mipmap/alarmonyo"
        android:background="@drawable/selector"
        android:layout_alignTop="@+id/unlockButton"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/unlockButton"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

</RelativeLayout>
