<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_pi_braking"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/auto_pic_resize"
    tools:context="ist440.pibraking.PiBraking">


    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rRight"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="102dp"
        android:id="@+id/absBrake"
        android:textOff="ABS:OFF"
        android:textOn="ABS:ON" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="65dp"
        app:srcCompat="@android:color/transparent"
        android:id="@+id/fLeft"
        android:background="#50ff2f2f"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_above="@+id/absBrake"
        android:layout_toRightOf="@+id/absBrake"
        android:layout_toEndOf="@+id/absBrake" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="65dp"
        app:srcCompat="@android:color/transparent"
        android:layout_marginTop="53dp"
        android:id="@+id/rLeft"
        android:background="#50ff2f2f"

        android:layout_below="@+id/absBrake"
        android:layout_alignLeft="@+id/fLeft"
        android:layout_alignStart="@+id/fLeft" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="65dp"
        app:srcCompat="@android:color/transparent"
        android:layout_marginTop="60dp"
        android:id="@+id/rRight"
        android:background="#50ff2f2f"
        android:layout_marginRight="38dp"
        android:layout_marginEnd="38dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/absBrake"
        android:layout_toStartOf="@+id/absBrake" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="65dp"
        app:srcCompat="@android:color/transparent"
        android:id="@+id/fRight"
        android:background="#50ff2f2f"

        android:layout_alignTop="@+id/rLeft"
        android:layout_alignLeft="@+id/rRight"
        android:layout_alignStart="@+id/rRight" />

</RelativeLayout>
