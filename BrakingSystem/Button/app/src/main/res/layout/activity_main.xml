<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/auto_pic_resize"
    tools:context="ist440w.button.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HelloWorld"
        android:id="@+id/result_text"
        android:layout_gravity="center_horizontal"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"

        android:layout_below="@+id/toggle_button_1"
        android:layout_alignLeft="@+id/toggle_button_1"
        android:layout_alignStart="@+id/toggle_button_1"
        android:layout_marginTop="21dp" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toggle_button_1"
        android:textOn="Brake On"
        android:textOff="Brake Off"
        android:layout_gravity="center_horizontal"
        android:onClick="changeButtonState"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="195dp" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="65dp"
        app:srcCompat="@android:color/transparent"
        android:id="@+id/imageView"
        android:background="#50ff2f2f"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toRightOf="@+id/result_text"
        android:layout_toEndOf="@+id/result_text"
        />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="65dp"
        app:srcCompat="@android:color/transparent"
        android:layout_marginTop="61dp"
        android:id="@+id/imageView3"
        android:background="#50ff2f2f"
        android:layout_marginRight="36dp"
        android:layout_marginEnd="36dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/toggle_button_1"
        android:layout_toStartOf="@+id/toggle_button_1" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="65dp"
        app:srcCompat="@android:color/transparent"
        android:layout_marginTop="38dp"
        android:id="@+id/imageView2"
        android:background="#50ff2f2f"
        android:layout_below="@+id/result_text"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="65dp"
        app:srcCompat="@android:color/transparent"
        android:id="@+id/imageView4"
        android:background="#50ff2f2f"
        android:layout_alignTop="@+id/imageView3"
        android:layout_toRightOf="@+id/result_text"
        android:layout_toEndOf="@+id/result_text" />
</RelativeLayout>
