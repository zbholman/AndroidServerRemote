<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ist440.controls.Home"
    android:background="#494949"
    android:clickable="true">

    <TextView
        android:text="Control Center Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="70dp"
        android:id="@+id/lblControlCenterHome"
        android:textAlignment="center"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lighting Controls"
        android:id="@+id/lblLightingControls"
        android:textSize="40dp"
        android:autoText="false"
        android:lines="2"
        android:width="200dp"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lighting Controls"
        android:id="@+id/textView"
        android:textSize="40dp"
        android:autoText="false"
        android:lines="2"
        android:width="200dp"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:layout_below="@+id/lblControlCenterHome"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp" />

    <ImageButton
        android:id="@+id/btnLightControls"
        android:backgroundTint="#f6eeba"
        android:backgroundTintMode="multiply"
        android:background="@drawable/icon_light_bulb"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignRight="@+id/lblLightingControls"
        android:layout_alignEnd="@+id/lblLightingControls"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/lblLightingControls" />

    <TextView
        android:text="Climate Control"
        android:layout_width="wrap_content"
        android:textSize="40dp"
        android:lines="2"
        android:textColor="#ffffff"
        android:width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:id="@+id/lblClimateControl"
        android:layout_alignBaseline="@+id/lblLightingControls"
        android:layout_alignBottom="@+id/lblLightingControls"
        android:layout_toRightOf="@+id/lblLightingControls"
        android:layout_toEndOf="@+id/lblLightingControls" />

</RelativeLayout>
