<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_ui"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ist.energymonitor.MainUI"
    android:background="?android:attr/colorControlHighlight"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/distRemainingBox"
        android:clickable="false"
        android:layout_alignBaseline="@+id/energyRemainingBox"
        android:layout_alignBottom="@+id/energyRemainingBox"
        android:layout_alignParentEnd="true"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:cursorVisible="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/energyRemainingBox"
        android:clickable="false"
        android:layout_above="@+id/EnergyremLable"
        android:layout_alignStart="@+id/energyBox"
        android:layout_marginBottom="12dp"
        android:textIsSelectable="false"
        android:visibility="visible"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <TextView
        android:text="Energy Usage: Since Last Full Charge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleDisplay"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/energyBox"
        android:layout_marginStart="27dp"
        android:clickable="false"
        android:layout_above="@+id/totalDistLabel"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/distTraveledBox"
        android:clickable="false"
        android:layout_alignBaseline="@+id/energyBox"
        android:layout_alignBottom="@+id/energyBox"
        android:layout_alignParentEnd="true"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <TextView
        android:text="Energy Remaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/EnergyremLable"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignBaseline="@+id/distRemainingLabel"
        android:layout_alignBottom="@+id/distRemainingLabel"
        android:layout_alignStart="@+id/energyRemainingBox"
        android:layout_marginStart="33dp" />

    <TextView
        android:text="Energy Used"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/energyLabel"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_alignBaseline="@+id/totalDistLabel"
        android:layout_alignBottom="@+id/totalDistLabel"
        android:layout_alignStart="@+id/EnergyremLable"
        android:layout_marginStart="13dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/charge_symbol"
        android:id="@+id/chargeImage"
        android:layout_below="@+id/energyBox"
        android:layout_centerHorizontal="true"
        style="@style/AppTheme" />

    <TextView
        android:text="Distance Remaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/distRemainingLabel"
        android:layout_marginBottom="18dp"
        android:textStyle="normal|bold"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/totalDistLabel" />

    <TextView
        android:text="Distance Traveled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totalDistLabel"
        android:textStyle="normal|bold"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:layout_marginEnd="28dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
