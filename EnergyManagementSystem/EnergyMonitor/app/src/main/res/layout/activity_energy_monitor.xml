<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="?attr/colorButtonNormal"
    tools:context="climatecontrol.ist440.climatecontrol.ClimateControl">


    <Button
        android:text="Disconnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDis"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/darker_gray" />

    <TextView
        android:text="Energy Used:"
        android:textColor="@color/colorAccent"
        android:textSize="26sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Label_energyused"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btnDis"
        android:layout_toEndOf="@+id/btnDis"
        android:clickable="false"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Energy Remaining:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Label_energyrem"
        android:textColor="@color/colorAccent"
        android:textSize="26sp"
        android:layout_marginLeft="83dp"
        android:layout_marginStart="83dp"
        android:layout_below="@+id/Label_energyused"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="49dp"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_PI_Volt"
        android:layout_alignBaseline="@+id/btnDis"
        android:layout_alignBottom="@+id/btnDis"
        android:layout_toRightOf="@+id/txt_energyremaining"
        android:layout_toEndOf="@+id/txt_energyremaining"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp" />

    <TextView
        android:text="60%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_energyused"
        android:textColor="@android:color/holo_green_light"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:layout_alignTop="@+id/Label_energyused"
        android:layout_alignLeft="@+id/Label_energyused"
        android:layout_alignStart="@+id/Label_energyused"
        android:layout_marginLeft="174dp"
        android:layout_marginStart="174dp" />

    <TextView
        android:text="40%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_energyremaining"
        android:textColor="@android:color/holo_green_light"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:layout_alignTop="@+id/Label_energyrem"
        android:layout_toRightOf="@+id/txt_energyused"
        android:layout_toEndOf="@+id/txt_energyused" />

</RelativeLayout>
